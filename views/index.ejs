
<%- include('./partials/header'); %>

<div class="container pt-5">
    <div class="row">
      <h5 class="fw-bold pt-2 pb-2"><%= title %></h5>
    </div>

</div>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
  <% for(let i = 0; i < postList.length; i++) { %>
    <div class="col">
      <a href="/post/details/<%= postList[i].id %>">
        <div class="card shadow-sm" style="min-height: 400px !important;  ">
          <img src="<%= postList[i].picture %>" style="object-fit: cover;"
              class="bd-placeholder-img card-img-top" width="100%" height="225" role="img"
              aria-label="Placeholder: Thumbnail" />
  
          <div class="card-body">
              <p class="card-title fw-bold fs-5"> <%= postList[i].title %> </p>
              <p class="card-text"> <%= postList[i].content.substring(0, 100) + (postList[i].content.length > 100 ? "..." : "") %> </p>
              <div class="d-flex justify-content-between align-items-center">
              </div>
          </div>
        </div>
      </a>
      
    </div>
  <% } %>
</div>



<%- include('./partials/footer'); %>
