<%- include('./partials/header'); %>

<!--used card body bootstrap combined with tables and lists -->
<div class="container py-3">
    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4 bg-dark">
          <div class="card-body text-center bg-white text-black">
            <img src="/images/explorelogo.gif" alt="avatar"
              class="rounded-circle img-fluid" style="width: 150px;">
            <h3 class="my-3"><%= userName %></h3>
            <p class="text-muted mb-1">Hi there! I'm <%= name %> </p>      
            <h3 class="my-3">About Me</h3>
            <p class="text-muted mb-4"><%= description %></p>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card mb-4 bg-white text-black">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Name</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= name %></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Gender</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= gender %></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Joined Date</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= joinedDate %></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Nationality</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= nationality %></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Interests</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= interests %></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Address</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= address %></p>
              </div>
            </div>
            </div>
          </div>
        </div>
      </div>
  </div>

<%- include('./partials/footer'); %>